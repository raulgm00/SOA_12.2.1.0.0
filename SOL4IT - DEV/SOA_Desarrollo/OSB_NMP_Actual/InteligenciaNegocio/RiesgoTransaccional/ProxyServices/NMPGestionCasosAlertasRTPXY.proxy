<?xml version="1.0" encoding="UTF-8"?>
<ser:proxyServiceEntry xmlns:ser="http://www.bea.com/wli/sb/services" xmlns:con="http://www.bea.com/wli/sb/services/security/config" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:oper="http://xmlns.oracle.com/servicebus/proxy/operations" xmlns:tran="http://www.bea.com/wli/sb/transports" xmlns:env="http://www.bea.com/wli/config/env">
    <ser:coreEntry isAutoPublish="false">
        <ser:description>Servicio SOAP expuesto que gestiona las siguentes operaciones para los casos y alertas:
Gestiona las siguientes operaciones:
• updateCasoAlerta: Actualiza un Caso o Alerta de un cliente en particular. 
• SelectCasoAlertasCliente: Consulta información de un caso y alertas relacionadas a dicho caso. 
• validaCaso: Valida si un cliente tiene casos en estado 'ANALISIS'
• insertCasoAlerta: Inserta un nuevo caso y sus alertas relacionadas en la base de datos de RT
• calculoCalificacion: Calcula la calificación de las Alertas que tiene un cliente en particular. 
• getCasosPeriodoEva: Recupera los casos donde el peridodo de evaluación sea igual a la fecha actual y donde el estado igual a 'CERRAR'
• validaPeriodoEvaluacion: Recupera los casos que tengan una fecha menor o igual a la fecha actual y donde el estado sea igual a "CERRADO"
• GetSumaCalificacionAlertas: Obtiene la suma de las alertas de un caso en particular
• getCasosDiferenteAnalisis: Obtiene los casos que tenga un estado diferente de "Análisis" para un cliente en particular</ser:description>
        <ser:binding type="SOAP" xsi:type="con:SoapBindingType" isSoap12="false" xmlns:con="http://www.bea.com/wli/sb/services/bindings/config">
            <con:wsdl ref="InteligenciaNegocio/RiesgoTransaccional/Resources/WSDLs/NMPGestionCasosAlertasRTWSDL"/>
            <con:binding>
                <con:name>CasoAlertasDbSOAP11Binding</con:name>
                <con:namespace>http://xmlns.oracle.com/pcbpel/adapter/db/Desarrollo+SOA/NmpCasosAlertas/CasosAlertasDb</con:namespace>
            </con:binding>
            <con:selector type="SOAP body"/>
        </ser:binding>
        <oper:operations enabled="true">
            <oper:messageTracing enabled="true">
                <oper1:detailsLevel xmlns:oper1="http://xmlns.oracle.com/servicebus/operations">terse</oper1:detailsLevel>
                <oper1:maxSize xmlns:oper1="http://xmlns.oracle.com/servicebus/operations">8192</oper1:maxSize>
            </oper:messageTracing>
            <oper:monitoring enabled="false" aggregationInterval="5"/>
        </oper:operations>
        <ser:ws-policy>
            <ser:binding-mode>no-policies</ser:binding-mode>
        </ser:ws-policy>
        <ser:invoke ref="InteligenciaNegocio/RiesgoTransaccional/Pipelines/NMPGestionCasosAlertasRTPL" xsi:type="con:PipelineRef" xmlns:con="http://www.bea.com/wli/sb/pipeline/config"/>
        <ser:xqConfiguration>
            <ser:snippetVersion>1.0</ser:snippetVersion>
        </ser:xqConfiguration>
    </ser:coreEntry>
    <ser:endpointConfig>
        <tran:provider-id>http</tran:provider-id>
        <tran:inbound>true</tran:inbound>
        <tran:URI>
            <env:value>/NMP/RT/CasoAlertas</env:value>
        </tran:URI>
        <tran:inbound-properties/>
        <tran:provider-specific xsi:type="http:HttpEndPointConfiguration" xmlns:http="http://www.bea.com/wli/sb/transports/http">
            <http:inbound-properties/>
            <http:compression>
                <http:compression-support>false</http:compression-support>
            </http:compression>
        </tran:provider-specific>
    </ser:endpointConfig>
    <aler:alertRules xmlns:aler="http://xmlns.oracle.com/servicebus/monitoring/alert">
        <aler:alertRule enabled="true" name="timeout_warning">
            <aler:frequency>every-time</aler:frequency>
            <aler:severity>warning</aler:severity>
            <aler:stopProcessing>false</aler:stopProcessing>
            <aler:condition aggregation-interval="10">
                <con1:monCondExpr xmlns:con1="http://xmlns.oracle.com/servicebus/monitoring/alert/condition">
                    <con1:function>max</con1:function>
                    <con1:lhs>Transport.response-time</con1:lhs>
                    <con1:operator>></con1:operator>
                    <con1:rhs>30000</con1:rhs>
                </con1:monCondExpr>
            </aler:condition>
            <aler:alertDestination ref="InteligenciaNegocio/RiesgoTransaccional/Resources/Alerts/OSBRiesgoTransaccionalAlert"/>
        </aler:alertRule>
    </aler:alertRules>
</ser:proxyServiceEntry>